
<div class="listContainer">
    <h2>Create a new drone</h2>

    <form action="/drones/create" method="post">
        <label for="name">Name</label>
        <input type="text" name="name">
        <br>
        <label for="propellers">Propellers</label>
        <input type="number" min="1" name="propellers">
        <br>
        <label for="maxSpeed">MaxSpeed</label>
        <input type="number" min="1" name="maxSpeed">
        <br>
        <button>Add</button>
    </form>
    
</div>
