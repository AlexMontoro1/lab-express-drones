<div class="listContainer">
    <h2>Available drones</h2>
{{#each this.droneList}}
<div class="droneContainer">
    <h3 class="name">
        {{this.name}}
            <br>
            <a href="/drones/{{this._id}}/edit">
            <button>🖌️</button> </a>
            <form action="/drones/{{this._id}}/delete" method="POST">
            <button>❌</button>
        </form>
        
        </h3>
        
    <ul class="list">
        <li>Propellers: {{this.propellers}}</li>
        <li>MaxSpeed: {{this.maxSpeed}}</li>
    </ul>
</div>
    
    
{{/each}}
<button>
        <a href="/drones/create">📝</a>
    </button>
</div>
