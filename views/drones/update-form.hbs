<div class="listContainer">
    <h2>Update drone</h2>

    <form action="/drones/{{this.droneParams._id}}/edit" method="post">
        <label for="name">Name</label>
        <input type="text" name="name" value="{{this.droneParams.name}}">
        <br>
        <label for="propellers">Propellers</label>
        <input type="number" min="1" name="propellers" value="{{this.droneParams.propellers}}">
        <br>
        <label for="maxSpeed">MaxSpeed</label>
        <input type="number" min="1" name="maxSpeed" value="{{this.droneParams.maxSpeed}}">
        <br>
        <button>Update</button>
    </form>
    
</div>
